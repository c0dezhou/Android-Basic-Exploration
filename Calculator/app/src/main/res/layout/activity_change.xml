<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bkg5"
    tools:context="com.example.calculator.MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_jzzh"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn_selector"
            android:textColor="@color/black"
            android:text="进制转换"
            android:textSize="30dp"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
            android:id="@+id/textchangeFormula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
                android:text="输入要转换的数："
            android:textSize="40px"
            android:gravity="center_vertical|right"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/changeFormula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="40px"
            android:gravity="center_vertical|right"
            android:textColor="@color/black"
            android:padding="5dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textyuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="输入源进制："
                android:textSize="40px"
                android:gravity="center_vertical|right"
                android:textColor="@color/black"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/yuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40px"
                android:gravity="center_vertical|right"
                android:textColor="@color/black"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textmudi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="输入目的进制："
                android:textSize="40px"
                android:gravity="center_vertical|right"
                android:textColor="@color/black"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/mudi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40px"
                android:gravity="center_vertical|right"
                android:textColor="@color/black"
                android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textzhuanhuanshu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="转换后的数为："
            android:textSize="40px"
            android:gravity="center_vertical|right"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/zhuanhuanshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="40px"
            android:gravity="center_vertical|right"
            android:textColor="@color/black"
            android:padding="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_danjizh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="转换" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_dwzh"
            android:textSize="30dp"
            android:background="@drawable/btn_selector"
            android:textColor="@color/black"
            android:text="单位转换"
            android:textAlignment="center"
            ></Button>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textdwshuru"
    android:text="输入要转换的数："></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dwshuru"
