<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bkg2"
    tools:context="com.example.calculator.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kong"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"

            />

        <TextView
            android:id="@+id/textFormula"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:textSize="70px"
            android:gravity="center_vertical|right"
            android:textColor="@color/white"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:textSize="70px"
            android:gravity="center_vertical|right"
            android:textColor="@color/white"
            android:padding="5dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TableRow android:layout_weight="1">
                <Button android:id="@+id/btn_sqrt" android:text="√"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/white"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_cbrt" android:text="³√"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <Button android:id="@+id/btn_left" android:text="("
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <Button android:id="@+id/btn_right" android:text=")"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <Button android:id="@+id/btn_clean" android:text="C"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_delete" android:text="←"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="80px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </TableRow>

            <TableRow android:layout_weight="1">
                <Button android:id="@+id/btn_pow2" android:text="x²"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/white"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_pow3" android:text="x³"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_7" android:text="7"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_8" android:text="8"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_9" android:text="9"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </TableRow>

            <TableRow android:layout_weight="1">
                <Button android:id="@+id/btn_sin" android:text="sin"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/white"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_cos" android:text="cos"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <Button android:id="@+id/btn_4" android:text="4"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_5" android:text="5"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_6" android:text="6"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </TableRow>

            <TableRow android:layout_weight="1">
                <Button android:id="@+id/btn_tan" android:text="tan"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/white"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_e" android:text="e"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <Button android:id="@+id/btn_1" android:text="1"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_2" android:text="2"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_3" android:text="3"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </TableRow>

            <TableRow android:layout_weight="1">
                <Button android:id="@+id/btn_ln" android:text="ln"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:background="@drawable/btn_selector"
                    android:textColor="@color/white"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_log" android:text="log"
                    android:textAllCaps="false"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="60px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <Button android:id="@+id/btn_0" android:text="0"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_dot" android:text="."
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button android:id="@+id/btn_percent" android:text="%"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:textSize="65px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </TableRow>

        </TableLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button android:id="@+id/btn_division" android:text="/"
                android:onClick="onClick"
                android:background="@drawable/btn_selector"
                android:textColor="@color/white"
                android:textSize="80px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <Button android:id="@+id/btn_multiple" android:text="×"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:textSize="100px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <Button android:id="@+id/btn_add" android:text="+"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:textSize="100px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <Button android:id="@+id/btn_sub" android:text="-"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:textSize="100px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <Button android:id="@+id/btn_equal" android:text="＝"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:textSize="100px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>












